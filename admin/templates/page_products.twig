<!DOCTYPE html>
<html>
    <head>
        <title>Towary</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>

        <link rel="stylesheet" href="css/style_admin_search.css">
    </head>
    <body>
        <nav class="navbar bg-info">
            <div class="container-fluid">
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                  <li><a href="loadTemplate_page_orders.php">Zamówienia</a></li>
                  <li><a href="loadTemplate_page_workers.php">Pracownicy</a></li>
                  <li><a href="loadTemplate_page_products.php">Towary</a></li>
                  <li><a href="function_logout.php">Wyloguj</a></li>
                  <h4 style="position: absolute; right: 20px">{{user.login}} - {{user.privilege}}</h4>
                </ul>
              </div>
            </div>
        </nav>

        <h3>Towary</h3>
        <a href="loadTemplate_formPage_add_product.php">Dodaj towar</a>
        <hr>

        <table class="table table-striped table-hover" id="data_table">
            <thead>
                <tr>
                    {% for key in keys %}
                        <th scope="col" data-column="{{key}}">{{key}}</th>
                    {% endfor %}
                    <th scope="col" data-column="Actions">Akcje</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td data-column="Id">{{product.Id}}</td>
                        <td data-column="Name">{{product.Name}}</td>
                        <td data-column="Price">{{product.Price}}zł</td>
                        <td data-column="Description">{{product.Description}}</td>
                        <td data-column="Cathegory">{{product.Cathegory}}</td>
                        <td data-column="Type">{{product.Type}}</td>
                        <td data-column="Tax">{{product.Tax}}</td>
                        <td data-column="Sale">{{product.SalePercent}}%</td>
                        <td data-column="Features">
                            <select>
                                {% for feature in product.Features %}
                                    <option>{{feature}}</option>
                                {% endfor %}
                            </select>
                        </td>
                        <td data-column="Actions" colspan="3">
                            <a href="loadTemplate_formPage_edit_product.php?id={{product.Id}}">Edytuj</a>
                            <a href="loadTemplate_page_productImages.php?id={{product.Id}}">Obrazy</a>
                            <a href="function_delete_product.php?id={{product.Id}}">Usuń</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <script>
            $(document).ready(function () {
                $('#data_table').DataTable();
            });

            const features = document.getElementsByTagName("select");
            features.forEach((feature) => {
                feature.disabled = true;
            })  
        </script>
    </body>
</html>